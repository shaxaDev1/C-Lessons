

@model List<lesson35.Models.User>

<a asp-controller="Home" asp-action="Index">Home</a>

<a asp-controller="Users"  asp-action="Add">Add Users</a>

<p>Count: @Model.Count</p>
<table>
   
        <th>№</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Delet</th>
        <th>Edit</th>
   
@{
    for(int i = 0; i < Model.Count; i++)
    {
        var index = Model[i].Index;
            <tr>
                <td>@index</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].Phone</td>
                <td><a asp-controller="Users" asp-action="Delete" asp-route-index="@index">Delete</a></td>
                <td><a asp-controller="Users" asp-action="Edit" asp-route-index="@index">Edit</a></td>   
            </tr>
    }
}
</table>
<style>
th {
    width: 70px;
}
table, th, td {
  border:1px solid black;
}
</style>