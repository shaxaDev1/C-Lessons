@model UserDto;

<h1 class="text-center">Tizimga kirish</h1>

<div class="d-flex justify-content-center">
    <form asp-action="SignIn" class="mb-3 w-25"  method="post">
        <div class="form-group">
            <label for="PhoneNumber"  class="form-label" >Phone number</label>
            <input class="form-control" type="text" id="PhoneNumber" name="Phone" placeholder="PhoneNumber"/>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Password" class="form-label" >Password</label>
            <input class="form-control" type="text" id="Password" name="Password" placeholder="Password" /><br
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>        
        <input class="form-control btn-primary" type="submit" value="Sign in" /><br>
        <a asp-controller="Users" asp-action="SignUp" class="form-control btn-primary mt-2">Sign up</a><br>
    </form>
</div>
